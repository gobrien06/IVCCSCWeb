#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('backend:server');
var http = require('http');
var https = require('https');
require('dotenv').config({path: '../.env'});
const fs = require('fs');

var privateKey  = fs.readFileSync('/etc/letsencrypt/live/www.ivccsc.com/privkey.pem', 'utf8');
var certificate = fs.readFileSync('/etc/letsencrypt/live/www.ivccsc.com/fullchain.pem', 'utf8');
const ca = fs.readFileSync('/etc/letsencrypt/live/ivccsc.com/fullchain.pem', 'utf8');


/**
 * Create HTTP server.
 */

http.createServer(app).listen(80);
https.createServer({key: privateKey, cert: certificate}, app).listen(443);


